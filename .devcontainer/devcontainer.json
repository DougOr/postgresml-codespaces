{
  "name": "Postgres-PGML-Vector Dev Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",  // Changed from "." to ".." if Dockerfile is in .devcontainer
    "args": {
      "WORKSPACE": "/workspace"
    }
  },
  "forwardPorts": [5432],
  "runArgs": [
    "--init",
    "--user=root",  // Ensure proper permissions
    "-v", "${localWorkspaceFolder}:/workspace"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "cweijan.vscode-postgresql-client2",
        "github.copilot"
      ]
    }
  },
  "workspaceFolder": "/workspace",
  "remoteUser": "postgres"  // Changed from default root
}
